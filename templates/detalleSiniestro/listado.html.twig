<h2>Listado de Detalles de Siniestro</h2>

<a href="{{ path('detalle_new') }}" class="btn btn-primary">Nuevo Detalle</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Siniestro</th>
            <th>Persona</th>
            <th>Rol</th>
            <th>Estado Alcoholico</th>
            <th>% Alcohol</th>
            <th>Observaciones</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for d in detalles %}
        <tr>
            <td>{{ d.id }}</td>
            {#function($persona) { return $persona->getNombre().' '.$persona->getApellido()#}
            <td>{{ d.idSiniestro.ubicacion() }} - {{ d.idSiniestro.fecha|date('Y-m-d H:i') }}</td>
            <td>{{ d.idPersona.nombre }} {{ d.idPersona.apellido }}</td>
            <td>{{ d.rol ? d.rol.descripcion : 'Sin rol' }}</td>
            <td>{{ d.estadoAlcoholico }}</td>
            <td>{{ d.porcentajeAlcohol }}</td>
            <td>{{ d.observaciones }}</td>
            <td>
                <a href="{{ path('detalle_show', {'id': d.id}) }}">Ver</a>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="8">No hay detalles registrados</td></tr>
    {% endfor %}
    </tbody>
</table>

