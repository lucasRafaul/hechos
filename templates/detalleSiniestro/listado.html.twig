<h2>Listado de Detalles de Siniestro</h2>

<a href="{{ path('detalle_new') }}" class="btn btn-primary">Nuevo Detalle</a>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Siniestro</th>
            <th>Persona</th>
            <th>Rol</th>
            <th>Estado Alcoholico</th>
            <th>% Alcohol</th>
            <th>Observaciones</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
    {% for d in detalles %}
        <tr>
            <td>{{ d.id }}</td>
            <td>{{ d.id_siniestro.ubicacion }} - {{ d.id_siniestro.fecha|date('Y-m-d H:i') }}</td>
            <td>{{ d.id_persona.nombre }} {{ d.id_persona.apellido }}</td>
            <td>{{ d.rol }}</td>
            <td>{{ d.estado_alcoholico }}</td>
            <td>{{ d.porcentaje_alcohol }}</td>
            <td>{{ d.observaciones }}</td>
            <td>
                <a href="{{ path('detalle_show', {'id': d.id}) }}">Ver</a>
            </td>
        </tr>
    {% else %}
        <tr><td colspan="8">No hay detalles registrados</td></tr>
    {% endfor %}
    </tbody>
</table>

