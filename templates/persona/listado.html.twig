{% extends 'base.html.twig' %}

{% block title %}Listado de Personas{% endblock %}

{% block body %}
<div class="card shadow-sm p-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="text-primary mb-0">üë• Listado de Personas</h2>
        <a href="{{ path('persona_new') }}" class="btn btn-success">
            ‚ûï Nueva Persona
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>DNI</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {% for p in personas %}
                    <tr>
                        <td><span class="badge bg-secondary">{{ p.id }}</span></td>
                        <td>{{ p.nombre }}</td>
                        <td>{{ p.apellido }}</td>
                        <td>{{ p.dni }}</td>
                        <td class="text-center">
                            <a href="{{ path('persona_edit', {'id': p.id}) }}" class="btn btn-sm btn-outline-primary">
                                ‚úèÔ∏è Editar
                            </a>

                            {% if is_granted('ROLE_ADMIN') %}
                            <form method="post" action="{{ path('persona_delete', {'id': p.id}) }}" style="display:inline;" onsubmit="return confirm('¬øSeguro que quieres eliminar esta persona?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ p.id) }}">
                                <button class="btn btn-sm btn-danger">üóëÔ∏è</button>
                            </form>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5" class="text-center text-muted py-3">
                            No hay personas registradas.
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
