    body {
        display: flex;
        flex-direction: column;
    }

    .content-wrapper {
        flex: 1; 
        padding-top: 20px;
    }

    footer {
        background-color: #0d3b66;
        color: white;
        padding: 10px 0;
        text-align: center;
        margin-top: 40px;
    }
</style>


    {% block stylesheets %}{% endblock %}
</head>
<body>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
    <div class="container-fluid">
        <a class="navbar-brand fw-bold" href="{{ path('siniestro_list') }}">Siniestros Viales</a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav me-auto">

                <!-- Siniestros -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="siniestrosDropdown" role="button" data-bs-toggle="dropdown">
                        Siniestros
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('siniestro_list') }}"> Listado</a></li>
                        <li><a class="dropdown-item" href="{{ path('siniestro_new') }}">+ Nuevo</a></li>
                    </ul>
                </li>

                <!-- Detalles -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="detallesDropdown" role="button" data-bs-toggle="dropdown">
                        Detalles
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('detalle_list') }}"> Listado</a></li>
                        <li><a class="dropdown-item" href="{{ path('detalle_new') }}">+ Nuevo</a></li>
                    </ul>
                </li>

                <!-- Personas -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="personasDropdown" role="button" data-bs-toggle="dropdown">
                        Personas
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('persona_list') }}">Listado</a></li>
                        <li><a class="dropdown-item" href="{{ path('persona_new') }}">+ Nueva</a></li>
                    </ul>
                </li>

                <!-- Reportes -->
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="reportesDropdown" role="button" data-bs-toggle="dropdown">
                        Reportes
                    </a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="{{ path('reporte_siniestros_mes') }}">üìÖ Siniestros por Mes</a></li>
                        <li><a class="dropdown-item" href="{{ path('reporte_roles_siniestros') }}">üë§ Roles en Siniestros</a></li>
                        <li><a class="dropdown-item" href="{{ path('reporte_por_localidad') }}">üìç Por Localidad</a></li>
                        <li><a class="dropdown-item" href="{{ path('reporte_por_sexo') }}">üöª Por Sexo</a></li>
                        <li><a class="dropdown-item" href="{{ path('reporte_tipo_vehiculo') }}">üöó Por Tipo de Veh√≠culo</a></li>
                        <li><a class="dropdown-item" href="{{ path('reporte_estado_alcoholico') }}">üç∑ Estado Alcoh√≥lico</a></li>
                    </ul>
                </li>

                <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" id="configDropdown" role="button" data-bs-toggle="dropdown">
                    ‚öôÔ∏è Configuraci√≥n
                </a>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="{{ path('app_localidad_new') }}">üìç Localidades</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_clima_new') }}">üå¶ Climas</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_tipo_vehiculo_new') }}">üöó Tipos de Veh√≠culo</a></li>
                </ul>
            </li>

            </ul>

            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <span class="navbar-text text-light me-3">
                         Hola! <strong>
                        {% if app.user %}
                            {{ app.user.email }}
                        {% else %}
                            Usuario
                        {% endif %}
                        </strong>
                        <small class="text-secondary">(
                            {% if app.user and app.user.roles|length > 0 %}
                                {{ app.user.roles|first|replace({'ROLE_':''})|capitalize }}
                            {% else %}
                                Usuario
                            {% endif %}
                        )</small>
                    </span>
                </li>
                {% if app.user %}
                    <li class="nav-item">
                        <a href="{{ path('app_logout') }}" class="btn btn-outline-light btn-sm">Salir</a>
                    </li>
                {% else %}
                    <li class="nav-item">
                    <a href="{{ path('app_register') }}" class="btn btn-outline-light btn-lg px-4">
                     Registrarse
                    </a>
                    </li>
                {% endif %}
            </ul>
        </div>
    </div>
</nav>


    <div class="container content-wrapper">
        {% block body %}{% endblock %}
    </div>

    <footer>
        <div>Sistema de Siniestros Viales de Rafaul Lucas - </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    {% block javascripts %}{% endblock %}
</body>
</html>

