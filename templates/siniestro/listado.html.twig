{% extends 'base.html.twig' %}

{% block title %}Listado de Siniestros{% endblock %}

{% block body %}
<div class="card shadow-sm p-4">
    <h2 class="text-primary mb-3">Listado de Siniestros</h2>

    <table class="table table-striped table-hover">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Ubicación</th>
                <th>Localidad</th>
                <th>Clima</th>
                <th>Descripción</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for s in siniestros %}
                <tr>
                    <td>{{ s.id }}</td>
                    <td>{{ s.fecha|date('Y-m-d') }}</td>
                    <td>{{ s.ubicacion }}</td>
                    <td>{{ s.localidad ? s.localidad.nombre : 'Sin localidad' }}</td>
                    <td>{{ s.clima ? s.clima.descripcion : 'Sin clima' }}</td>
                    <td>{{ s.descripcion }}</td>
                    <td>
                        <a href="{{ path('siniestro_show', {'id': s.id}) }}" class="btn btn-sm btn-info text-white">Ver</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center text-muted">No hay siniestros registrados.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('siniestro_new') }}" class="btn btn-success">➕ Nuevo siniestro</a>
</div>
{% endblock %}
