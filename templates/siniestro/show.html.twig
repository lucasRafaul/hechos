{% extends 'base.html.twig' %}

{% block title %}Detalle del Siniestro{% endblock %}

{% block body %}
<div class="card shadow-sm p-4">
    <h2 class="text-primary mb-4">Detalle del Siniestro</h2>

    <div class="row mb-3">
        <div class="col-md-6">
            <p><strong>ID:</strong> {{ siniestro.id }}</p>
            <p><strong>Fecha:</strong> {{ siniestro.fecha|date('Y-m-d') }}</p>
            <p><strong>Calle:</strong> {{ siniestro.calle }}</p>
            <p><strong>Altura:</strong> {{ siniestro.altura }}</p>
        </div>
        <div class="col-md-6">
            <p><strong>Localidad:</strong> {{ siniestro.localidad ? siniestro.localidad.nombre : 'Sin localidad' }}</p>
            <p><strong>Clima:</strong> {{ siniestro.clima ? siniestro.clima.descripcion : 'Sin clima' }}</p>
            <p><strong>Descripci√≥n:</strong> {{ siniestro.descripcion }}</p>
        </div>
    </div>


    <div class="mt-4 d-flex gap-2">
        <a href="{{ path('siniestro_list') }}" class="btn btn-secondary"> Volver al listado</a>
    </div>
</div>
{% endblock %}